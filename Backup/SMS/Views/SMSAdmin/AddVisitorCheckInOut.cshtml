    Add Visitor Check-In / Check-Out</h2>
<h4>@Html.Raw(ViewBag.ErrorMessage)</h4>
<script language="javascript" type="text/javascript">
    function pageValidation() {
        if (document.getElementById("LocationName").value == "") {
            alert('Please enter the Location Name');
            document.getElementById("LocationName").focus();
            return false;
        }
        return true;
    }

    function frmSubmit() {
        document.forms[0].submit();
    }
</script>
<script type="text/javascript" language="javascript">
    $(function () {
        $("#ddlCompaniesList").change(function (e) {
            //var id = this.selectedValue;
            //alert(this.options[this.selectedIndex].value);
            var id = this.options[this.selectedIndex].value;

            $.ajax({
                type: "GET",
                url: "GetVisitingCompanyPhoneNumber/" + id.toString(),
                data: "{}",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                async: true,
                cache: false,
                success: function (msg) {
                    document.getElementById('txtPhone').value = msg;
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    alert(errorThrown);
                }
            });
            return false;
        });
    });

</script>
