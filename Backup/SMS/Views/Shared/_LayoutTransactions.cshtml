<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/css/etrac.css")" rel="stylesheet" type="text/css" />
</head>
<body>
@{
    if ((Session["UserName"] == null) || (string.IsNullOrEmpty(Session["UserName"].ToString())))
    {
        Response.Redirect(Url.Content("~/SMSAdmin/Login"));
    }
    }
    <div class="header_part">
        <div class="header_wrapper">
            <div class="header_main_mt_cont">
                <div class="logo">
                    <a href="../SMSAdmin/Login">
                        <img src="@Url.Content("~/Content/images/logo.png")" alt="" border="0" /></a></div>
                <div class="top_menu">
                    Welcome :
                    <li><a href="#" class="footer_Highlight">@Session["UserName"] </a></li>
                    <li>| </li>
                    <li>@Html.ActionLink("Logout", "Logout", "SMSAdmin")</li></div>
            </div>
            <div class="menu_cont">
                <div class="check_in_button">
                <a href="@Url.Content("~/SMSAdmin/AddVisitorCheckInOut")"></a>
                    @*@Html.ActionLink("Check-In / Check-Out", "AddVisitorCheckInOut", "SMSAdmin")*@
                </div>
                <div class="vehicles_button">
                <a href="@Url.Content("~/SMSAdmin/GetVehicles")"></a>
                   @*@Html.ActionLink("Vehicles", "GetVehicles", "SMSAdmin") *@
                </div>
                <div class="occurrences_button">
                <a href="@Url.Content("~/SMSAdmin/GetOccurrences")"></a>
                    @*@Html.ActionLink("Occurrences", "GetOccurances", "SMSAdmin")*@
                </div>
                <div class="incidents_button">
                <a href="@Url.Content("~/SMSAdmin/GetIncidents")"></a>
                    @*@Html.ActionLink("Incidents", "GetIncidents", "SMSAdmin")*@
                </div>
                <div class="event_button">
                <a href="@Url.Content("~/SMSAdmin/GetVisitorCheckInOut")"></a>
                    @*@Html.ActionLink("Vsitors", "GetVisitorCheckInOut", "SMSAdmin")*@
                </div>
                <div class="lost_button">
                <a href="@Url.Content("~/SMSAdmin/GetLostAndFound")"></a>
                    @*@Html.ActionLink("Lost And Found", "GetLostAndFound", "SMSAdmin")*@
                </div>
            </div>
            <div class="body_main_mt_cont">
                <div class="transaction_cont">
                    <div class="footer_menu">
                        <ul>
                         @if (Session["UserType"] != null && Session["UserType"] != "" && (Session["UserType"].ToString().Equals("1") || Session["UserType"].ToString().Equals("2"))) 
                         {
                            <li>@Html.ActionLink("Visitor Types", "GetVisitorTypes", "SMSAdmin")</li>
                            <li>| </li>
                            <li>@Html.ActionLink("Companies", "GetCompaniesList", "SMSAdmin")</li>
                            <li>| </li>
                            <li>@Html.ActionLink("Gates", "GatesList", "SMSAdmin")</li>
                            <li>| </li>
                            <li>@Html.ActionLink("Keys", "GetKeysList", "SMSAdmin")</li>
                            <li>| </li>
                            <li>@Html.ActionLink("Passes", "GetPassesViewModel", "SMSAdmin")</li>
                            <li>| </li>
                            <li>@Html.ActionLink("Locations", "GetLocationsList", "SMSAdmin")</li>
                            <li>| </li>
                            <li>@Html.ActionLink("Users", "UsersList", "SMSAdmin")</li>
                             <li>| </li>
                            <li> @Html.ActionLink("Events", "GetEventsMaster", "SMSAdmin")</li>
                            @*<li>| </li>
                            <li><a href="#">Reports</a></li>*@
                            <li>| </li>
                            <li>@Html.ActionLink("Key Statuses", "GetKeyStatuses", "SMSAdmin")</li>
                         }
                             @if (Session["UserType"] != null && Session["UserType"] != "" && Session["UserType"].ToString().Equals("1") ) 
                             {
                                <li>| </li>
                                <li>@Html.ActionLink("Deployments", "Deployment", "SMSAdmin")</li>
                             }
                        </ul>
                    </div>
                </div>
            </div>
            @RenderBody()
            <div class="bottom_line">
            </div>
            <div class="coperight_cont_txt">
            @if (Session["DeploymentName"] != null && Session["DeploymentName"] != "" )
            {
                <span style="font-weight:bold;"> @Session["DeploymentName"]</span><br />
            }
                Copyright 2013 © Etrac Pte. Ltd.</div>
                <br /><br /><br /><br /><br />
        </div>
    </div>
</body>
</html>
