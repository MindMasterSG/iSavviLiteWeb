@model SMSEntities.SMSDBEntities.UserInfo
@{Layout = null;}
<html>
<head>
    <title>LoginView</title>
    <link href="@Url.Content("~/Content/css/etrac.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
</head>
<body>
    @using (Html.BeginForm())
    {
        
        <div class="login_part">
            <div class="login_wrapper">
                <div class="login_main_mt_cont">
                    <div class="logo_login">
                        <a href="#">
                            <img src="@Url.Content("~/Content/images/logo.png")" alt="" border="0" /></a>
                    </div>
                    <div class="logo_box_img">
                        <div class="logo_box_cont">
                            <div class="phone_nimber_part">
                                <div class="sign_cont_txt">
                                    Sign in</div><br />
                                    <table><tr><td><div class="phone_nimber_txt">
                                    Username</div></td></tr>
                                    <tr><td><div>@Html.TextBoxFor(model => model.LoginID, new { @class = "usernametext" })<br /></div></td></tr>
                                    <tr><td><div style="color:Red;font-family:Verdana;font-size:small;"> @Html.ValidationMessageFor(model => model.LoginID)</div></td></tr>
                                    <tr><td><div class="phone_nimber_txt">
                                    Password</div></td></tr>
                                    <tr><td><div>@Html.PasswordFor(model => model.Password, new { @class = "usernametext" })<br /></div></td></tr>
                                    <tr><td><div style="color:Red;font-family:Verdana;font-size:small;"> @Html.ValidationMessageFor(model => model.Password)</div></td></tr></table>
                            </div>
                            <div class="post_ad_check_box_part">
                                @*<div class="post_ad_check_box">
                                    <input name="checkbox" type="checkbox" value="" checked /></div>
                                <div class="post_ad_check_box_txt">
                                    Remember Me</div>*@
                                <div class="ignin_button">
                                    <input type="submit" class="btnAddUpdate" value="Login" /></div>
                            </div>
                            @Html.ValidationSummary(true, "Invalid User.")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>
